<h3>Schedule</h3>

<div Class="main_container">

  <%= render "shared/inform" %>

  <div class="btn_row">
    <h6>Appointment list</h6>
    <%= link_to "Add new", :new_schedule, class: "btn btn-secondary btn-sm mt-1 mb-1" %>
  </div>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Start date</th>
        <th>End date</th>
        <th>All day</th>
        <th>Update date</th>
      </tr>
    </thead>

    <tbody>
      <% @schedules.each do |schedule| %>
        <tr>
          <td><%= schedule.id %></td>
          <td><%= schedule.title %></td>
          <td><%= l schedule.start_date, format: :short %></td>
          <td><%= l schedule.end_date, format: :short %></td>
          <td><%= boolean_display(schedule. all_day) %></td>
          <td><%= l schedule.updated_at, format: :default %></td>
          <td>
            <%= link_to "reference", schedule, class: "link-dark" %>
          </td>
          <td>
            <%= link_to "edit", [:edit, schedule], class: "link-dark" %>
          </td>
          <td>
            <%= link_to "delete", schedule, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: "link-dark" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <footer>
    <div class="list-group-item d-flex justify-content-between  mb-2 footer">
      <p>Appointment totall:  <span class="badge bg-secondary rounded-pill"><%= @count %></span></p>
      <p>today's date: <%= l @now, format: :short %></p>
    </div>
  </footer>
</div>