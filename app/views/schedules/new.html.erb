<h3>Schedulet</h3>

<div Class="container mt-5">
  <%= render "shared/flash" %>
  <%= render "shared/error", obj: @schedule %>

  <h5>Add New Appointment</h5>
  <p class="Required">* Required fields</p>

  <%= form_with model: @schedule do |f| %>
    <div>
      <div class="form-group">
        <%= f.label :title, "* title" %>
        <%= f.text_field :title, class: "form-control"  %>
      </div>

      <div class="form-group mt-2">
        <%= f.label :start_date, "* start date" %>
        <%= f.datetime_field :start_date, class: "form-control"  %>
      </div>

      <div class="form-group mt-2">
        <%= f.label :end_date, "* end date" %>
        <%= f.datetime_field :end_date, class: "form-control"  %>
      </div>

      <div class="form-group mt-2">
        <%= f.label :all_day %>
        <span>
          <%= f.check_box :all_day %>
          <p class="mr-2">Please check if it is all day</p>
        </span>
      </div>

      <div class="form-group">
        <%= f.label :text_area, "Memo"  %>
        <%= f.text_area :text_area, class: "form-control"  %>
      </div>

      <div class="form-group d-flex gap-2 mt-5">
        <%= f.submit "Add Appointment", class: "btn btn-secondary", data: { turbo_confirm: "Are you sure you want to save?"} %>
        <%= link_to "back to index", :schedules, class: "btn btn-secondary" %>
      </div>
    </div>
  <% end %>
</div>